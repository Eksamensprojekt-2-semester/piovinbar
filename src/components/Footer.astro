---
// Astro props og CSS-import
import "../styles/style.css";
const { title } = Astro.props;
---

<footer class="footer">
  <div class="grid_1_1_1">
    <div class="footerbaggrund"></div>

    <div class="kontakt">
      <h3>Kontaktinformationer</h3>
      <p class="p">Bagerstræde 2, 1617 København V</p>
      <p class="p">+45 53 54 64 55</p>
      <p class="p">Piovin@piovin.dk</p>
    </div>

    <div class="logohvid">
      <img class="logohvid" src="./images/logohvid.svg" alt="Logohvid" />
    </div>

    <div class="tider">
      <h3>Åbningstider</h3>
      <div class="tid">
        <p class="p">Man-Tors:</p>
        <p class="p">16:00-00:00</p>
      </div>
      <div class="tid">
        <p class="p">Fre-Lør:</p>
        <p class="p">14:00-00:00</p>
      </div>
      <div class="tid">
        <p class="p">Søn:</p>
        <p class="p">14:00-22:00</p>
      </div>
    </div>
  </div>

  <div class="links">
    <div>
      <a href="https://www.instagram.com/piovinbar/"> <img class="instagramlogo" src="./images/instagramlogo.webp" alt="Instagram" /></a>
    </div>
    <div>
      <a href="https://www.facebook.com/PioVinBarKbh"> <img class="facebooklogo" src="./images/facebooklogo.webp" alt="Facebook" /></a>
    </div>
  </div>

  <style>
    .instagramlogo {
      height: 50px;
      width: auto;
    }

    .facebooklogo {
      height: 50px;
      width: auto;
    }

    .footer {
      position: relative;
      color: white;
      padding-top: 7rem;
      padding-bottom: 1rem;
    }

    .p {
      color: white;
    }

    .footerbaggrund {
      position: absolute;
      top: 0;
      width: 100%;
      height: 700px;
      background: url("./images/footer.svg") no-repeat center center/cover;
      z-index: -1;
    }

    .kontakt,
    .tider {
      display: flex;
      flex-direction: column;
      margin-top: 2rem;
    }

    .kontakt {
      padding-left: 6rem;
    }

    .tid {
      display: flex;
      justify-content: space-between;
      max-width: 220px;
    }
    .logohvid {
      max-width: 150px;
      margin-top: 1rem;
    }

    .links {
      display: flex;
      justify-content: center;
      align-items: center;
      padding-top: 4rem;
      gap: 2rem;
    }

    @media (min-width: 1200px) {
      .grid_1_1_1 {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        align-items: center;
        justify-items: center;
      }

      .footerbaggrund {
        position: absolute;
        top: 0;
        width: 100%;
        height: 500px;
        background: url("./images/footer.svg") no-repeat center center/cover;
        z-index: -1;
      }
    }

    @media (max-width: 1199px) {
      .grid_1_1_1 {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
      }

      .kontakt {
        order: 1;
      }

      .tider {
        order: 2;
      }

      .logohvid {
        order: 3;
        align-self: center;
      }
    }
  </style>
</footer>
