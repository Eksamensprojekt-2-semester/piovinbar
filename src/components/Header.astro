---
// Astro props og CSS-import
import "../styles/style.css";
const { title } = Astro.props;
---

<nav class="nav">
  <a href="/">
    <img class="logo" src="/images/logo.svg" alt="Logo" />
  </a>
  <ul class="menu">
    <li><a href="/#menukortet">Menukort</a></li>
    <li><a href="/om">MÃ¸d Pio Vinbar</a></li>
    <li><a href="/event_site">Events</a></li>
    <li><a href="/kontakt">Kontakt</a></li>
  </ul>
  <div class="burger">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
  </div>
</nav>

<style>
  :root {
    --color-primary: #5a6b3b;
    --color-secondary: #3c1518;
    --color-background: #f7f5ea;
  }

  body {
    margin: 0;
    font-family: "Poppins", sans-serif;
  }

  .logo {
    width: 70px;
    height: auto;
  }

  nav {
    background-color: var(--color-background);
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    font-size: 0.9rem;
  }

  a {
    text-decoration: none;
    color: var(--color-secondary);
  }

  .menu {
    display: none;
    flex-direction: column;
    background-color: var(--color-background);
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    margin: 0;
    padding: 1rem 0;
    list-style: none;
    z-index: 10;
  }

  nav.active .menu {
    display: flex;
  }

  .menu li {
    padding: 0.5rem 1rem;
  }

  .menu a {
    font-size: 1.25rem;
  }

  .burger {
    display: block;
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: #333;
    margin-bottom: 5px;
    transition: 0.2s linear;
  }

  .burger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .burger.active .line:nth-child(2) {
    opacity: 0;
  }

  .burger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Desktop layout: 801px og op */
  @media screen and (min-width: 801px) {
    nav {
      padding: 14px 20px;
    }

    .logo {
      width: 100px;
      height: auto;
    }

    .menu {
      display: flex !important;
      position: static;
      flex-direction: row;
      justify-content: space-between;
      width: auto;
      background-color: transparent;
      gap: 30px;
      margin-right: 1rem;
    }

    .menu li {
      margin-left: 20px;
      padding: 0;
    }

    .menu a {
      font-size: 0.9rem;
    }

    .burger {
      display: none;
    }
  }
</style>

<script>
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");

  burger.addEventListener("click", burgerClick);
  function burgerClick() {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  }
  menu.addEventListener("click", menuClick);
  function menuClick() {
    burger.classList.remove("active");
    nav.classList.remove("active");
  }
</script>
